	</Button>

	
	<Button virtual="true" name="ARKINV_TemplateButtonTableSort">
		
		<NormalFont inherits="ARKINV_GameFontNormalSmall" />
		<HighlightFont inherits="ARKINV_GameFontNormalSmall" />
